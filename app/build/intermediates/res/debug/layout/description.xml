    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/imgProduct"
            android:layout_gravity="center_horizontal|top"
            android:background="#ffffff"
            android:alpha=".8"
            />


        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#21bdba">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Product"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:gravity="center"
        android:layout_margin="10dp"
        />
</LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:padding="10dp"
              android:orientation="horizontal"
              android:weightSum="1">
              <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Description : "
                  android:id="@+id/desctitle"
                  android:textColor="#505050"
                  android:layout_weight=".5"/>
              <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="This is the description of this product"
                  android:id="@+id/desctxt"
                  android:textStyle="normal"
                android:textColor="#000000"
                 android:layout_weight=".5"
                  />

          </LinearLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Category :"
                    android:id="@+id/catText"
                    android:textColor="#505050"
                    android:layout_weight=".5"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fruits"
                    android:textColor="#000000"

                    android:textStyle="normal"
                    android:id="@+id/category"
                    android:layout_weight=".5"
                    />

            </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Grade : "
                    android:id="@+id/tvgrd"
                    android:textColor="#505050"
                    android:layout_weight=".5"/>


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:id="@+id/tvgrade"
                    android:layout_weight=".5" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Price : "
                    android:id="@+id/prc"
                    android:textColor="#505050"
                   android:layout_weight=".5" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:id="@+id/msrd"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tvprice"
                        android:layout_toEndOf="@+id/tvprice" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:id="@+id/tvprice"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KGs"
                        android:textStyle="normal"
                        android:id="@+id/tvunit"
                        android:textColor="#000000"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/msrd"
                        android:layout_toEndOf="@+id/msrd" />
                </RelativeLayout>

            </LinearLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ffffff"
                android:weightSum="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Available units : "
                    android:id="@+id/mxavlblunts"
                    android:layout_weight=".5"
                    android:paddingLeft="10dp"
                    android:textColor="#505050"


                     />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="100 kgs"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:layout_weight=".5" />
            </LinearLayout>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Origin :"
                    android:textColor="#505050"
                    android:id="@+id/origin"
                    android:layout_weight=".5"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Origin"
                    android:layout_toRightOf="@+id/origin"

                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:id="@+id/originname"
                   android:layout_weight=".5" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Seller :"
                    android:id="@+id/slr"
                    android:textColor="#505050"
                    android:layout_weight=".5"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Mive Private Limited"
                    android:layout_toRightOf="@+id/slr"

                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:layout_weight=".5"
                    />
            </LinearLayout>

            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            card_view:cardUseCompatPadding="true"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#f0f0f0"
               android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Mandi :"
                    android:textColor="#505050"
                    android:id="@+id/mndi"
                    android:layout_weight=".5"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Azaadpur Mandi"
                    android:layout_weight=".5"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:id="@+id/mndiname"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
    </ScrollView>

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:id="@+id/imgbck"
            android:alpha=".8"
            android:layout_gravity="left|top"
            android:background="@drawable/bckarrow"
            android:layout_margin="10dp"
            />
    </FrameLayout>
