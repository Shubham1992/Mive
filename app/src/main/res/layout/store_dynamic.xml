<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Framelayout to display Fragments -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainframe"
        >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <LinearLayout
                android:id="@+id/cntainerStore"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:orientation="horizontal"
                    android:background="#21bdba"
                    android:visibility="gone">

                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bckarrowwhite"
                        android:id="@+id/imgbckHome"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvHeadingAppbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="15dp"
                        android:text="CHOOSE A SUPPLIER"

                        android:textColor="#CC0000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:typeface="sans"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <Button
                        android:id="@+id/btnCrt"
                        android:layout_width="30dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/shopping232"
                        android:layout_gravity="right|center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:text="0"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:paddingLeft="3dp"
                        android:gravity="center"
                        android:textColor="#21bdba"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHOOSE A SUPPLIER.."
                    android:padding="12dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:background="#FFFFE5"
                    android:visibility="gone"

                    />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/layoutSlider"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="#ffffff">

      <!--  -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"

            android:layout_alignParentTop="true"
            android:id="@+id/rluser"
            android:padding="10dp"
            android:background="@drawable/userbck">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/fruits"
                android:minHeight="90dp"
                app:siBorderColor="#ffffff"
                app:siBorderWidth="5dp"
                app:siBorderAlpha=".6"
                android:minWidth="90dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imguser" />

            <!--<com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/square"
                app:siBorderWidth="6dp"
                app:siBorderColor="@color/darkgray"/>-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubham Goel"
                android:id="@+id/tvUserName"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/imguser"
                android:layout_centerHorizontal="true" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting"
            android:text="Logout"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"

            />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/rluser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- <TextView
                     android:layout_width="match_parent"
                     android:layout_height="1px"
                     android:background="#21bdba"/>-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customized Basket"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btCustCat"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Invoice"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btInvoiceupload"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btHome"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Previous Orders"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btPreviousOrders"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment History"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btPaymntHistory"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/storelistcontainer">

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#21bdba"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fruits"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"

                        android:id="@+id/btFruits"
                        android:background="#ffffff"
                        android:gravity="left"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vegetables"
                        android:textSize="16dp"
                        android:padding="18dp"
                        android:textColor="#000000"



                        android:id="@+id/btVegetables"
                        android:background="#ffffff"
                        android:gravity="left"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#21bdba"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help n Support"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:textStyle="normal"


                    android:padding="15dp"
                    android:id="@+id/btHelp"
                    android:background="#ffffff"
                    android:gravity="left"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textStyle="normal"


                    android:id="@+id/btContact"
                    android:background="#ffffff"
                    android:gravity="left"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQs"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textStyle="normal"


                    android:id="@+id/btFAQ"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:visibility="gone"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Mive"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textStyle="normal"


                    android:id="@+id/btPrivPolicy"
                    android:background="#ffffff"
                    android:gravity="left"/>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

