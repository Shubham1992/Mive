<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

	android:layout_width="match_parent"
	android:layout_height="wrap_content"
android:background="#d3d3d3"
	android:padding="1px">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:id="@+id/cv"

		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:id="@+id/rlCard"
			android:background="#ffffff"
			>


			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:id="@+id/imgProductPhoto"
                android:src="@drawable/tomato"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=" Tomato "
				android:textSize="20dp"
				android:textStyle="normal"
				android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingBottom="4dp"
                android:paddingTop="2dp"

				android:id="@+id/tvProductName"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgProductPhoto"
                android:layout_toEndOf="@+id/imgProductPhoto" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="1 kgs"
				android:paddingLeft="15dp"
                android:paddingTop="5dp"
				android:visibility="gone"
				android:id="@+id/tvAvailableQuantity"
				android:layout_below="@+id/tvProductName"
				android:layout_toRightOf="@+id/imgProductPhoto"
				android:layout_toEndOf="@+id/imgProductPhoto" />


			<EditText
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:paddingLeft="10dp"
                android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
                android:hint="Rate"
                android:layout_marginLeft="10dp"
                android:textColorHint="#d3d3d3"
				android:textSize="15dp"
				android:textColor="#888888"
				android:background="@drawable/dayselectorborderthin"
				android:maxWidth="90dp"
				android:id="@+id/etPricePerItemTotal"
                android:layout_alignTop="@+id/textView21"
                android:layout_toRightOf="@+id/textView21"
                android:layout_toEndOf="@+id/textView21" />



			<EditText
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
                android:hint="Quantity"
                android:textColorHint="#d3d3d3"
				android:textSize="15dp"
				android:textColor="#888888"
				android:background="@drawable/dayselectorborderthin"
				android:maxWidth="90dp"
				android:id="@+id/editTextQty"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                />

			<EditText
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
                android:hint="Amount"
                android:textColorHint="#d3d3d3"
				android:textSize="15dp"
				android:textColor="#888888"
				android:background="@drawable/dayselectorborderthin"
				android:maxWidth="90dp"
				android:id="@+id/editTextAmount"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#808080"
                android:id="@+id/textView21"
                android:layout_alignTop="@+id/editTextQty"
                android:layout_toRightOf="@+id/editTextQty"
                android:layout_toEndOf="@+id/editTextQty"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:padding="5dp"
                android:textColor="#808080"
                android:id="@+id/textView23"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@+id/editTextAmount"
                android:layout_toLeftOf="@+id/editTextAmount"
                android:layout_toStartOf="@+id/editTextAmount" />

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:id="@+id/imgclear"
                android:visibility="gone"
				android:padding="4dp"
				android:layout_marginRight="3dp"
				android:src="@drawable/clear"
				android:layout_alignTop="@+id/tvProductName"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" />


		</RelativeLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>