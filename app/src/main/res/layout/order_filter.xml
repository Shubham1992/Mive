<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
	android:layout_height="match_parent"

	android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller"
            android:padding="12dp"
            android:id="@+id/toggleseller"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Days"
            android:id="@+id/toggledays"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/togglestatus"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:id="@+id/togglesortby"
            android:padding="10dp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="50dp"
            android:background="#ffffff">

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/storeFilterContainer"
			android:orientation="vertical"
            >

		</LinearLayout>



			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="7dp"
				android:id="@+id/dayset"
				android:layout_weight="2"
				android:gravity="center"
				android:text="7"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
				/>



		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:id="@+id/statuscontainer"
            android:visibility="gone"
			>
			<TextView
				android:id="@+id/paid"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Paid"
				android:gravity="center"
				android:padding="10dp"
				android:layout_weight="1"
				android:textStyle="normal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>

			<TextView
				android:id="@+id/unpaid"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Un-Paid"
				android:padding="10dp"
				android:gravity="center"
				android:textStyle="normal"
				android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>
            <TextView
                android:id="@+id/all"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="All"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="normal"


                android:layout_weight="1"/>
		</LinearLayout>




		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/sortbyoptnscntainer"
			android:orientation="vertical"
			android:background="#d3d3d3"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub-Total"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/subtotalfilter"
                android:background="#ffffff"
                android:layout_margin="1px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/sellerfilter"
                android:background="#ffffff"
                android:layout_margin="1px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/statusfilter"
                android:background="#ffffff"
                android:layout_margin="1px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/datefilter"
                android:background="#ffffff"
                android:layout_margin="1px"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>

    </FrameLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:elevation="5dp">
        <Button
            android:id="@+id/clearfilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clear Filter"
            android:layout_weight="1"
            android:gravity="center"
            android:elevation="8dp"
            android:background="#ffffff"
            android:textColor="#808080"
            android:textStyle="bold"
            android:visibility="visible"
            />
        <Button
            android:id="@+id/applyfilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Apply Filter"
            android:layout_weight="1"
            android:gravity="center"
            android:elevation="8dp"
            android:background="#21bdba"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
    </LinearLayout>
</FrameLayout>